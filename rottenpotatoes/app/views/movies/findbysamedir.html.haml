-#  This file is app/views/movies/index.html.haml
%h1 All Movies with the director:#{@movies[0].director}


%table#movies
  %thead
    %tr
      %th Movie Title
      %th Rating
      %th Release Date
      %th Director
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= movie.director

= link_to 'Back',movie_path(@movie)
